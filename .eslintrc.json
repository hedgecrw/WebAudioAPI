{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            3
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "overrides": [
        {
            "files": ["Instrument.mjs"],
            "rules": {
                "no-inner-declarations": "off"
            }
        },
        {
            "files": ["AnalysisBase.mjs"],
            "rules": {
                "no-unused-vars": "off"
            }
        },
        {
            "files": ["EffectBase.mjs"],
            "rules": {
                "no-unused-vars": "off"
            }
        },
        {
            "files": ["EncoderBase.mjs"],
            "rules": {
                "no-unused-vars": "off"
            }
        }
    ]
}
